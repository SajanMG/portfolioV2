<!-- Other Contributions -->
<section class="contributions">
    <div class="container">
        <h2 class="section-title">Other Contributions</h2>
        <p class="section-description">Here are some of my contributions to open source projects and developer community.</p>
        
        <div class="contributions-grid">
            {% for contribution in contributions %}
            <div class="contribution-card">
                <div class="contribution-content">
                    <h3 class="contribution-title">
                        {% if contribution.websiteUrl %}
                        <a href="{{ contribution.websiteUrl }}" target="_blank" rel="noopener">{{ contribution.title }}</a>
                        {% else %}
                        {{ contribution.title }}
                        {% endif %}
                    </h3>
                    <p class="contribution-description">{{ contribution.description }}</p>
                    <div class="contribution-details">
                        <div class="contribution-role">
                            <strong>Role:</strong> {{ contribution.role }}
                        </div>
                        <div class="contribution-technologies">
                            <strong>Tech Stack:</strong>
                            <div class="tech-tags">
                                {% for tech in contribution.technologies %}
                                <span class="tech-tag">{{ tech }}</span>
                                {% endfor %}
                            </div>
                        </div>
                        {% if contribution.websiteUrl %}
                        <div class="contribution-link">
                            <a href="{{ contribution.websiteUrl }}" target="_blank" rel="noopener" class="website-link">
                                <i class="fas fa-external-link-alt"></i>
                                <span>Visit Website</span>
                            </a>
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>


<!-- Recent Blog Posts -->
<section class="recent-posts">
    <div class="container">
        <h2 class="section-title">Latest Blog Posts</h2>
        <div class="posts-grid">
            {% for post in collections.post | head(3) %}
            <a href="{{ post.url }}" class="post-card-link">
                <article class="post-card">
                    <div class="post-card-content">
                        <h3 class="post-card-title">
                            {{ post.data.title }}
                        </h3>
                        <p class="post-card-excerpt">{{ post.data.description or post.data.excerpt or post.templateContent | excerpt }}</p>
                        <div class="post-card-meta">
                            <time datetime="{{ post.date | dateISO }}">{{ post.date | date }}</time>
                            {% if post.data.tags %}
                            <div class="post-card-tags">
                                {% for tag in post.data.tags | head(2) %}
                                <span class="tag">{{ tag }}</span>
                                {% endfor %}
                            </div>
                            {% endif %}
                        </div>
                    </div>
                </article>
            </a>
            {% endfor %}
        </div>
        <div class="posts-cta">
            <a href="/blog" class="btn btn-primary">View All Posts</a>
        </div>
    </div>
</section>

<!-- Contact Section -->
<section id="contact" class="contact">
    <div class="container">
        <h2 class="section-title">Get In Touch</h2>
        <div class="contact-content">
            <div class="contact-info">
                <p>I'm always interested in new opportunities and collaborations. Feel free to reach out!</p>
                <div class="contact-methods">
                    <a href="mailto:{{ site.email or 'your.email@example.com' }}" class="contact-method">
                        <i class="fas fa-envelope"></i>
                        <span>{{ site.email or 'your.email@example.com' }}</span>
                    </a>
                    {% if site.social.github %}
                    <a href="{{ site.social.github }}" target="_blank" rel="noopener" class="contact-method">
                        <i class="fab fa-github"></i>
                        <span>{{ site.github or 'yourusername' }}</span>
                    </a>
                    {% endif %}
                    {% if site.social.linkedin %}
                    <a href="{{ site.social.linkedin }}" target="_blank" rel="noopener" class="contact-method">
                        <i class="fab fa-linkedin"></i>
                        <span>{{ site.linkedin or 'yourusername' }}</span>
                    </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</section>
