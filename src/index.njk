        <div class="skills-grid">
            <div class="skill-category">
                <h3>Frontend</h3>
                <div class="skill-tags">
                    {% for skill in site.skills.frontend %}
                    <span class="skill-tag">{{ skill }}</span>
                    {% endfor %}
                </div>
            </div>
            <div class="skill-category">
                <h3>Backend</h3>
                <div class="skill-tags">
                    {% for skill in site.skills.backend %}
                    <span class="skill-tag">{{ skill }}</span>
                    {% endfor %}
                </div>
            </div>
            <div class="skill-category">
                <h3>Tools & Others</h3>
                <div class="skill-tags">
                    {% for skill in site.skills.tools %}
                    <span class="skill-tag">{{ skill }}</span>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</section>


